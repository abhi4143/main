#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;
void  max(long x) 
{ 
  
    int count = 0; 
    while (x!=0) 
    { 
       
        x = (x & (x << 1)); 
        count++; 
    } 
  
    cout<<count<<endl;
} 

int main() {
    int n;
    cin>>n;
    while(n!=0)
    {
        long m;
        cin>>m;
        max(m);
        
        n--;
    }
  
   
    
    return 0;
}
